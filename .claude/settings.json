{
	"hooks": {
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "git diff --name-only --diff-filter=ACMR | grep -E '\\.(ts|tsx|js|jsx|json|md)$' | xargs -r yarn run -T prettier --write"
					}
				]
			}
		]
	},
	"permissions": {
		"allow": [
			"WebSearch",
			"Bash(gh pr:*)",
			"Bash(yarn install)",
			"Bash(yarn test:*)",
			"Bash(yarn lint:*)",
			"Bash(yarn typecheck)",
			"Bash(git add:*)",
			"mcp__Context7__resolve-library-id",
			"mcp__Context7__get-library-docs"
		]
	}
}

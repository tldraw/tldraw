{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "src/test",
    "dist",
    "docs"
  ],
  "include": ["src/**/*"],
  "compilerOptions": {
    "composite": false,
    "incremental": false,
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": true,
    "sourceMap": true
  },
  "references": [{ "path": "../vec" }, { "path": "../intersect" }]
}

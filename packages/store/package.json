{
	"name": "@tldraw/store",
	"description": "tldraw infinite canvas SDK (store).",
	"version": "3.15.1",
	"author": {
		"name": "tldraw Inc.",
		"email": "hello@tldraw.com"
	},
	"homepage": "https://tldraw.dev",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/tldraw/tldraw"
	},
	"bugs": {
		"url": "https://github.com/tldraw/tldraw/issues"
	},
	"keywords": [
		"tldraw",
		"sdk",
		"drawing",
		"app",
		"development",
		"whiteboard",
		"canvas",
		"infinite"
	],
	"/* NOTE */": "These `main` and `types` fields are rewritten by the build script. They are not the actual values we publish",
	"main": "./src/index.ts",
	"types": "./.tsbuild/index.d.ts",
	"/* GOTCHA */": "files will include ./dist and index.d.ts by default, add any others you want to include in here",
	"files": [],
	"scripts": {
		"test-ci": "lazy inherit",
		"test": "jest",
		"test-coverage": "lazy inherit",
		"build": "tsx ../../internal/scripts/build-package.ts",
		"build-api": "cd ../.. && pnpm tsx internal/scripts/build-api.ts",
		"prepack": "tsx ../../internal/scripts/prepack.ts",
		"postpack": "../../internal/scripts/postpack.sh",
		"pack-tarball": "pnpm pack",
		"lint": "tsx ../../internal/scripts/lint.ts"
	},
	"dependencies": {
		"@tldraw/state": "workspace:*",
		"@tldraw/utils": "workspace:*"
	},
	"peerDependencies": {
		"react": "^18.2.0 || ^19.0.0"
	},
	"devDependencies": {
		"@peculiar/webcrypto": "^1.5.0",
		"lazyrepo": "0.0.0-alpha.27",
		"raf": "^3.4.1"
	},
	"jest": {
		"preset": "../../internal/config/jest/node/jest-preset.js",
		"setupFiles": [
			"./setupTests.js",
			"raf/polyfill"
		],
		"moduleNameMapper": {
			"^~(.*)": "<rootDir>/src/$1"
		}
	}
}

		"concurrently": "^9.1.2",
		"lazyrepo": "0.0.0-alpha.27",
		"tsx": "^4.19.2",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@fastify/cors": "^9.0.1",
		"@fastify/websocket": "^10.0.1",
		"@tldraw/sync": "workspace:*",
		"@tldraw/sync-core": "workspace:*",

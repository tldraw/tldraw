{
	"name": "dotcom",
	"description": "The production app for tldraw.",
	"version": "0.0.0",
	"private": true,
	"author": {
		"name": "tldraw GB Ltd.",
		"email": "hello@tldraw.com"
	},
	"browserslist": [
		"defaults"
	],
	"scripts": {
		"dev": "./wait-for-postgres.sh && yarn run -T tsx scripts/dev-app.ts",
		"build": "yarn run -T tsx scripts/build.ts",
		"build-i18n": "yarn i18n:extract && yarn i18n:compile",
		"start": "VITE_PREVIEW=1 yarn run -T tsx scripts/dev-app.ts",
		"lint": "yarn run -T tsx ../../../internal/scripts/lint.ts",
		"test-ci": "yarn run -T vitest run --passWithNoTests",
		"test": "yarn run -T vitest --passWithNoTests",
		"i18n:extract": "formatjs extract 'src/{tla,pages,components}/**/*.ts*' --out-file public/tla/locales/en.json --additional-component-names F --id-interpolation-pattern '[md5:contenthash:hex:10]' --format lokalise",
		"i18n:compile": "formatjs compile-folder public/tla/locales public/tla/locales-compiled --format lokalise --ast",
		"e2e": "NODE_OPTIONS='--no-experimental-strip-types' rm -rf 'e2e/.auth' && yarn playwright test --project=chromium",
		"e2e-x10": "NODE_OPTIONS='--no-experimental-strip-types' yarn playwright test --project=chromium --repeat-each=10",
		"e2e-debug": "NODE_OPTIONS='--no-experimental-strip-types' yarn playwright test --project=chromium --debug",
		"e2e-ui": "NODE_OPTIONS='--no-experimental-strip-types' yarn playwright test --project=chromium --ui",
		"e2e-staging": "NODE_OPTIONS='--no-experimental-strip-types' yarn playwright test --project=staging",
		"test-coverage": "yarn run -T vitest run --coverage --passWithNoTests"
	},
	"dependencies": {
		"@clerk/clerk-react": "^5.22.8",
		"@rocicorp/zero": "0.19.2025050203",
		"@sentry/integrations": "^7.120.3",
		"@sentry/react": "^7.120.3",
		"@tldraw/assets": "workspace:*",
		"@tldraw/dotcom-shared": "workspace:*",
		"@tldraw/sync": "workspace:*",
		"@tldraw/sync-core": "workspace:*",
		"@tldraw/utils": "workspace:*",
		"@types/regexgen": "^1.3.3",
		"axe-core": "^4.10.3",
		"browser-fs-access": "^0.35.0",
		"classnames": "^2.5.1",
		"idb": "^7.1.1",
		"intl-messageformat": "^10.7.14",
		"lodash.pick": "^4.4.0",
		"posthog-js": "^1.248.1",
		"qrcode": "^1.5.4",
		"radix-ui": "^1.4.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-ga4": "^2.1.0",
		"react-helmet-async": "^1.3.0",
		"react-intl": "^6.8.9",
		"react-router-dom": "^6.28.2",
		"tldraw": "workspace:*"
	},
	"devDependencies": {
		"@clerk/testing": "^1.4.15",
		"@formatjs/cli": "^6.5.1",
		"@playwright/test": "^1.50.0",
		"@sentry/cli": "^2.41.1",
		"@swc/plugin-formatjs": "^5.1.1",
		"@tldraw/validate": "workspace:*",
		"@types/lodash.pick": "^4.4.9",
		"@types/md5": "^2.3.5",
		"@types/node": "^22.15.31",
		"@types/qrcode": "^1.5.5",
		"@types/react": "^18.3.18",
		"@vitejs/plugin-react-swc": "^3.10.2",
		"dotenv": "^16.4.7",
		"fast-glob": "^3.3.3",
		"identity-obj-proxy": "^3.0.0",
		"json5": "^2.2.3",
		"kysely": "^0.27.5",
		"lazyrepo": "0.0.0-alpha.27",
		"pg": "^8.13.1",
		"regexgen": "^1.3.0",
		"vite": "^7.0.1",
		"vitest": "^3.2.4",
		"ws": "^8.18.0"
	}
}
